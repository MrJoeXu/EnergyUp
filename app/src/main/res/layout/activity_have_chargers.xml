<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lxx_team.energyup.HaveChargers"
    android:padding="0dp">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#EB3943"
        android:id="@+id/borrow_charge_title"
        >
        <Button
            android:id="@+id/borrow_charge_back"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="#3CC175"/>
        <ImageView
            android:id="@+id/charger_icon"
            android:layout_width="35dp"
            android:layout_height="56dp"
            android:background="#463CC1"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="NEED A CHARGER?"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_below="@id/charger_icon"
            android:fontFamily="sans-serif-bold"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/borrow_charge_title"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phones and Tablets"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#EFEFF5"
                android:id="@+id/phones_tablets_title"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phones_tablets_title"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="23dp"
                android:id="@+id/container_phones">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="#BFB4B2"
                    android:drawableTop="@drawable/lighting"
                    android:drawingCacheQuality="high"
                    android:paddingTop="10dp"
                    android:textSize="10dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"
                    android:text="Apple Lighting"
                    android:id="@+id/btn_lighting"
                    android:clickable="true"
                    android:onClick="onClick" />
                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="#BFB4B2"
                    android:drawableTop="@drawable/pin"
                    android:drawingCacheQuality="high"
                    android:paddingTop="10dp"
                    android:shadowColor="#000000"
                    android:textSize="10dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"
                    android:text="Apple 30-pins"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/btn_lighting"
                    android:id="@+id/btn_30pins"
                    android:clickable="true"
                    android:onClick="onClick" />
                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:drawableTop="@drawable/mini"
                    android:drawingCacheQuality="high"
                    android:paddingTop="10dp"
                    android:background="#BFB4B2"
                    android:shadowColor="#000000"
                    android:textSize="10dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"
                    android:text="Mini USB"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/btn_30pins"
                    android:id="@+id/btn_miniusb"
                    android:clickable="true"
                    android:onClick="onClick" />
                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="#BFB4B2"
                    android:shadowColor="#000000"
                    android:textSize="10dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"
                    android:text="Micro USB"
                    android:id="@+id/btn_microusb"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/btn_lighting"
                    android:drawableTop="@drawable/micro"
                    android:drawingCacheQuality="high"
                    android:paddingTop="15dp"
                    android:clickable="true"
                    android:onClick="onClick" />
                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="#BFB4B2"
                    android:shadowColor="#000000"
                    android:textSize="10dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"
                    android:text="USB Type-C"
                    android:id="@+id/btn_typec"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/btn_microusb"
                    android:layout_below="@+id/btn_30pins"
                    android:drawableTop="@drawable/typec"
                    android:drawingCacheQuality="high"
                    android:paddingTop="15dp"
                    android:clickable="true"
                    android:onClick="onClick" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laptops"
                android:layout_below="@+id/container_phones"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/laptops_title"
                android:textColor="#EFEFF5" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/laptops_title"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="23dp"
                android:id="@+id/container_laptops"
                android:layout_marginBottom="40dp">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="#BFB4B2"
                    android:shadowColor="#000000"
                    android:textSize="10dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"
                    android:text="Apple"
                    android:id="@+id/btn_apple"
                    android:clickable="true"
                    android:onClick="onClick" />
                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="#BFB4B2"
                    android:shadowColor="#000000"
                    android:textSize="10dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"
                    android:text="Hewlett-Packard"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/btn_apple"
                    android:id="@+id/btn_hp"
                    android:clickable="true"
                    android:onClick="onClick" />
                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="#BFB4B2"
                    android:shadowColor="#000000"
                    android:textSize="10dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/btn_dell"
                    android:text="Dell"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/btn_hp"
                    android:clickable="true"
                    android:onClick="onClick" />
            </RelativeLayout>
            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:text="Submit"
                android:layout_below="@id/container_laptops"
                android:onClick="sendMessge"
                android:nestedScrollingEnabled="true" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>